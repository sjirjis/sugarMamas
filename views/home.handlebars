<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <div class="panel panel-login formStyle">
      <div class="panel-heading formStyle">
        <div class="row">
          <div class="col-xs-6 text-center">
            <a href="#" class="active tab" id="login-form-link">Login</a>
          </div>
          <div class="col-xs-6 text-center">
            <a href="#" id="register-form-link">Register</a>
          </div>
        </div>
        <hr>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-12">
            <!-- throw server-side validation errors -->
            {{#if errors}}
              {{#each errors}}
                <div class="alert alert-danger">
                  <strong>{{msg}}</strong>
                </div>
              {{/each}}
            {{/if}}
            <!-- end errors -->
            <form id="login-form" action="/" method="post" role="form" style="display: block;">
              <div class="form-group">
                <input type="text" name="username" id="loginUsername" tabindex="1" class="form-control formStyle" placeholder="Username" value="" required>
              </div>
              <div class="form-group">
                <input type="password" name="password" id="loginPassword" tabindex="2" class="form-control formStyle" placeholder="Password" required="">
              </div>
              <!-- <div class="form-group text-center">
                <input type="checkbox" tabindex="3" class="" name="remember" id="remember">
                <label for="remember"> Remember Me</label>
              </div> -->
              <div class="form-group">
                <div class="row">
                  <div class="col-sm-6 col-sm-offset-3">
                    <input type="submit" name="login-submit" id="login-submit" tabindex="4" class="form-control formStyle btn btn-login" value="Log In">
                  </div>
                </div>
              </div>
              <div class="form-group">
                <div class="row">
                  <div class="col-lg-12">
                    <div class="text-center">
                      <a href="#" tabindex="5" class="forgot-password">Forgot Password?</a>
                    </div>
                  </div>
                </div>
              </div>
            </form>
            <form id="register-form" action="/" method="post" role="form" style="display: none;">
              <div class="form-group">
                <input type="text" name="username" id="registerUsername" tabindex="1" class="form-control formStyle" placeholder="Username" value="">
              </div>
              <div class="form-group">
                <input type="email" name="email" id="email" tabindex="2" class="form-control formStyle" placeholder="Email Address" value="" required="">
              </div>
              <div class="form-group">
                <input type="text" pattern="[0-9]{5}" name="zipCode" id="zipCode" tabindex="3" class="form-control formStyle" placeholder="Zip Code" value="" required="">
              </div>
              <div class="form-group">
                <input type="password" name="password" id="registerPassword" tabindex="4" class="form-control formStyle" placeholder="Password" required="">
              </div>
              <div class="form-group">
                <input type="password" name="confirmPassword" id="confirmPassword" tabindex="5" class="form-control formStyle" placeholder="Confirm Password" required="">
              </div>
              <div class="form-group">
                <div class="row">
                  <div class="col-sm-6 col-sm-offset-3">
                    <input type="submit" name="register-submit" id="register-submit" tabindex="6" class="form-control formStyle btn btn-register" value="Register Now">
                  </div>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
